---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Chat from '@components/Chat.astro';

import Lightbulb from '@icons/Lightbulb.astro';
import User from '@icons/User.astro';
import Terminal from '@icons/Terminal.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>

	<body>
		<Header title={SITE_TITLE} />
		<main id="home" class="w-full m-0 max-w-full min-h-[100vh] bg-white transition-colors ease-in-out duration-300">
			<section class="max-w-[70vw] m-auto mt-20">
				<div class="container px-5 py-24 mx-auto">
					<div class="text-center mb-20">
						<h1 class="sm:text-3xl text-2xl font-medium text-slate-900 mb-4">
							Recipe AI
						</h1>
						<p class="leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto text-slate-500">
							This is a small project that uses AI to generate recipes, you can type in the ingredients or a
							dish and it will generate a recipe for you including the steps, duration and even difficulty
							of the recipe.
						</p>
						<div class="flex mt-6 justify-center">
							<div class="w-16 h-1 rounded-full bg-slate-500 inline-flex"></div>
						</div>
					</div>

					<div class="flex flex-col lg:flex-row gap-4 w-full">
						<div
							class="p-8 flex flex-col text-center items-center bg-slate-50 rounded-xl border border-slate-200 transition-colors duration-200 hover:border-[#60739f] group">
							<div
								class="w-20 h-20 inline-flex items-center justify-center rounded-full bg-slate-200 text-slate-500 mb-5 flex-shrink-0 group-hover:bg-slate-400 transition-colors duration-200 ease-in-out">
								<Lightbulb />
							</div>
							<div class="flex-grow">
								<h2 class="text-slate-900 text-xl font-medium mb-3">Easy to use</h2>
								<p class="leading-relaxed text-slate-400">
									A simple interface that allows you to generate recipes with ease. Just type in the
									ingredients or dish and let the AI do the rest.
								</p>
							</div>
						</div>

						<div
							class="p-8 flex flex-col text-center items-center bg-slate-50 rounded-xl border border-slate-200 transition-colors duration-200 hover:border-[#60739f] group">
							<div
								class="w-20 h-20 inline-flex items-center justify-center rounded-full bg-slate-200 text-slate-500 mb-5 flex-shrink-0 group-hover:bg-slate-400 transition-colors duration-200 ease-in-out">
								<User />
							</div>
							<div class="flex-grow">
								<h2 class="text-slate-900 text-lg font-medium mb-3">Recipe Assistant</h2>
								<p class="leading-relaxed text-slate-400">
									If you have any questions about a recipe, you can ask the assistant and it will help
									you in any way it can.
								</p>
							</div>
						</div>

						<div
							class="p-8 flex flex-col text-center items-center bg-slate-50 rounded-xl border border-slate-200 transition-colors duration-200 hover:border-[#60739f] group">
							<div
								class="w-20 h-20 inline-flex items-center justify-center rounded-full bg-slate-200 text-slate-500 mb-5 flex-shrink-0 group-hover:bg-slate-400 transition-colors duration-200 ease-in-out">
								<Terminal />
							</div>
							<div class="flex-grow">
								<h2 class="text-slate-900 text-lg font-medium mb-3">Self hosting</h2>
								<p class="leading-relaxed text-slate-400">
									You can host this project on your own server and use your own API key to generate
									recipes. Using local LLM models is also possible.
								</p>
								<a
									class="mt-3 text-slate-500 inline-flex items-center transition-colors duration-200 hover:text-[#60739f]">Learn
									More
									<svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
										stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
										<path d="M5 12h14M12 5l7 7-7 7"></path>
									</svg>
								</a>
							</div>
						</div>

					</div>
				</div>

				<Chat />
			</section>
		</main>
		<Footer />
	</body>
</html>