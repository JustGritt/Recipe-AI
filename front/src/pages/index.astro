---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Chat from '@components/Chat.astro';
import SearchBar from '@components/SearchBar.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="flex flex-col min-h-screen">
        <Header title={SITE_TITLE} />
        <main id="home" class="flex-grow w-full bg-white transition-all duration-300 ease-in-out m-0 max-w-full py-20">
            <section class="max-w-[70vw] m-auto mt-20">
                <div class="h-full block">
                    <h2 class="text-gray-900">Need some inspiration?</h2>
                    <p class="text-gray-400">
						You can generate a new recipe like magic!
						Just type in the ingredients or a dish and let the AI do the rest.
					</p>
                    <SearchBar />
                </div>
                <Chat />
            </section>
        </main>
        <Footer />
    </body>
</html>